# Development Dockerfile
FROM node:15-alpine

# Set working directory
WORKDIR /app

# Copy package files
COPY package*.json ./

# Install all dependencies (including dev dependencies)
RUN npm ci

# Copy source code
COPY . .

# Set Node options for legacy OpenSSL
ENV NODE_OPTIONS=--openssl-legacy-provider

# Expose port 3000
EXPOSE 3000

# Start development server
CMD ["npm", "start"]
